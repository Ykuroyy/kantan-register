<%= form_with(model: product, local: true, class: "space-y-6") do |form| %>
  <% if product.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul class="list-disc pl-5">
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "商品名", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <div>
    <%= form.label :description, "商品説明", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>

  <div>
    <%= form.label :price, "価格", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 relative rounded-md shadow-sm">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <span class="text-gray-500 sm:text-sm">¥</span>
      </div>
      <%= form.number_field :price, min: 0, class: "pl-7 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
  </div>

  <div>
    <%= form.label :image, "商品画像", class: "block text-sm font-medium text-gray-700" %>
    <% if product.image.attached? %>
      <div class="mt-2 mb-4">
        <%= image_tag product.image, class: "w-32 h-32 object-cover rounded" %>
        <p class="text-sm text-gray-500 mt-1">現在の画像</p>
      </div>
    <% end %>
    <%= form.file_field :image, class: "mt-1 block w-full" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit submit_text, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <%= link_to "キャンセル", cancel_path, class: "text-gray-600 hover:text-gray-800" %>
  </div>
<% end %>