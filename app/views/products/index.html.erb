<div class="mb-6 flex justify-between items-center">
  <h1 class="text-3xl font-bold">商品一覧</h1>
  <%= link_to "新規商品登録", new_product_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @products.each do |product| %>
    <div class="border rounded-lg overflow-hidden shadow-lg">
      <% if product.image.attached? %>
        <%= image_tag product.image, class: "w-full h-48 object-cover" %>
      <% else %>
        <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
          <span class="text-gray-500">画像なし</span>
        </div>
      <% end %>
      <div class="p-4">
        <h2 class="text-xl font-bold mb-2"><%= product.name %></h2>
        <p class="text-gray-700 mb-2"><%= product.description %></p>
        <p class="text-green-600 font-bold text-xl">¥<%= number_with_delimiter(product.price) %></p>
        <div class="mt-4 flex justify-between">
          <%= link_to "詳細", product_path(product), class: "text-blue-500 hover:underline" %>
          <%= link_to "編集", edit_product_path(product), class: "text-yellow-500 hover:underline" %>
          <%= link_to "削除", product_path(product), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-red-500 hover:underline" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @products.empty? %>
  <div class="text-center py-10">
    <p class="text-gray-500 text-xl">商品がまだ登録されていません</p>
    <%= link_to "最初の商品を登録する", new_product_path, class: "mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>