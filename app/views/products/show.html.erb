<h1 class="form-heading">商品詳細</h1>

<div class="container">
  <!-- 単独ページなので grid ではなく直接 card を配置 -->
  <div class="card">
    <% if @product.image.attached? %>
      <%= image_tag @product.image, class: "preview-image", style: "width:100%;max-width:320px;border-radius:12px;margin-bottom:1rem;" %>
    <% else %>
      <p style="margin-bottom:1rem;">画像なし</p>
    <% end %>

    <h2><strong>商品名:</strong> <%= @product.name %></h2>
    <p><strong>価格: ¥</strong><%= number_with_delimiter(@product.price) %></p>

    <div style="margin-top:1.4rem; display:flex; flex-wrap:wrap; gap:.6rem; justify-content:center;">
      <%= link_to "編集", edit_product_path(@product), class: "btn btn-yellow" %>

      <%= form_with(url: product_path(@product), method: :delete, class: "inline-block", data: { turbo_confirm: "本当に削除しますか？" }) do |form| %>
        <%= form.submit "削除", class: "btn btn-red" %>
      <% end %>

      <%= link_to "商品一覧に戻る", products_path, class: "btn btn-gray" %>
    </div>
  </div>
</div>
