<div class="max-w-4xl mx-auto">
  <div class="mb-6 flex justify-between items-center">
    <h1 class="text-3xl font-bold"><%= @product.name %></h1>
    <div class="space-x-2">
      <%= link_to "編集", edit_product_path(@product), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "戻る", products_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="md:flex">
      <div class="md:w-1/2">
        <% if @product.image.attached? %>
          <%= image_tag @product.image, class: "w-full h-auto object-cover" %>
        <% else %>
          <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
            <span class="text-gray-500">画像なし</span>
          </div>
        <% end %>
      </div>
      <div class="p-6 md:w-1/2">
        <div class="mb-4">
          <h2 class="text-sm text-gray-600 uppercase tracking-wide">商品情報</h2>
          <p class="text-3xl font-bold text-green-600">¥<%= number_with_delimiter(@product.price) %></p>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">商品説明</h3>
          <p class="text-gray-700"><%= @product.description.present? ? @product.description : "説明はありません" %></p>
        </div>

        <div class="border-t pt-4">
          <div class="flex justify-between text-sm text-gray-600">
            <span>商品ID</span>
            <span><%= @product.id %></span>
          </div>
          <div class="flex justify-between text-sm text-gray-600 mt-2">
            <span>登録日</span>
            <span><%= l @product.created_at, format: :long %></span>
          </div>
          <div class="flex justify-between text-sm text-gray-600 mt-2">
            <span>最終更新日